<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.p6spy.engine.spy.P6SpyDriver</property>
        <property name="connection.url">jdbc:p6spy:mysql://localhost:3306/movie</property>
        <property name="connection.username">root</property>
        <property name="connection.password">password</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="ua.javarush.film.entity.Film"/>
        <mapping class="ua.javarush.film.entity.Language"/>
        <mapping class="ua.javarush.film.entity.Actor"/>
        <mapping class="ua.javarush.film.entity.Category"/>
        <mapping class="ua.javarush.film.entity.Inventory"/>
        <mapping class="ua.javarush.film.entity.FilmText"/>
        <mapping class="ua.javarush.film.entity.Store"/>
        <mapping class="ua.javarush.film.entity.Country"/>
        <mapping class="ua.javarush.film.entity.City"/>
        <mapping class="ua.javarush.film.entity.Address"/>
        <mapping class="ua.javarush.film.entity.Staff"/>
        <mapping class="ua.javarush.film.entity.Customer"/>
        <mapping class="ua.javarush.film.entity.FilmRating"/>
        <mapping class="ua.javarush.film.entity.Payment"/>
        <mapping class="ua.javarush.film.entity.SpecialFeatures"/>
        <mapping class="ua.javarush.film.entity.Rental"/>
    </session-factory>
</hibernate-configuration>
